---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, GITHUB_URL, BUYMEACOFFEE_URL } from '../consts';
---

<header>
	<nav>
		<div class="logo-title">
			<img src="Logo.png" alt="Slide Capture Logo" width="100" height="100" />
			<h2><a href="/">{SITE_TITLE}</a></h2>
		</div>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/features">Features</HeaderLink>
			<HeaderLink href="/docs">Documentation</HeaderLink>
			<HeaderLink href="/community">Community</HeaderLink>
		</div>
		<div class="action-links">
			<a href={GITHUB_URL} class="action-button github-button" target="_blank">
				<svg viewBox="0 0 16 16" aria-hidden="true" width="16" height="16">
					<path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path>
				</svg>
				GitHub
			</a>
			<a href={BUYMEACOFFEE_URL} target="_blank" class="action-button coffee-button">
				<img src="https://cdn.buymeacoffee.com/buttons/v2/default-yellow.png" alt="Buy Me A Coffee" />
			</a>
			<a href="/download" class="action-button download-button">Download</a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: sticky;
		top: 0;
		z-index: 100;
	}

	nav {
		display: grid;
		grid-template-columns: auto 1fr auto;
		align-items: center;
		gap: 2rem;
		padding: 0.75rem 0;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo-title {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		min-width: max-content;
	}

	.logo-title img {
		width: 32px;
		height: 32px;
	}

	h2 {
		margin: 0;
		font-size: 1.25em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--accent);
	}

	.internal-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
	}

	.internal-links a {
		font-size: 1rem;
		padding: 0.5rem;
		color: #666;
		text-decoration: none;
		border-bottom: 2px solid transparent;
		transition: all 0.2s;
	}

	.internal-links a:hover,
	.internal-links a.active {
		color: var(--accent);
		border-bottom-color: var(--accent);
	}

	.action-links {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.action-button {
		height: 40px;
		display: inline-flex;
		align-items: center;
		justify-content: center;
		text-decoration: none;
		border-radius: 6px;
		font-weight: 500;
		transition: all 0.2s;
		padding: 0 1.25rem;
		font-size: 0.9375rem;
	}

	.github-button {
		background: #f5f5f5;
		color: #666;
		gap: 0.5rem;
		border: 1px solid #eee;
		min-width: 120px;
	}

	.github-button:hover {
		background: rgba(143, 40, 198, 0.05);
		border-color: var(--accent);
		color: var(--accent);
	}

	.coffee-button {
		padding: 0;
		height: 40px;
		background: transparent;
	}

	.coffee-button img {
		height: 40px;
		border-radius: 6px;
	}

	.download-button {
		background: var(--accent);
		color: white;
		min-width: 120px;
		border: 1px solid var(--accent);
	}

	.download-button:hover {
		background: var(--accent-dark);
		border-color: var(--accent-dark);
	}

	@media (max-width: 920px) {
		nav {
			grid-template-columns: 1fr;
			gap: 1rem;
			text-align: center;
			padding: 1rem;
		}

		.logo-title {
			justify-content: center;
		}

		.internal-links {
			flex-direction: column;
			gap: 0.5rem;
		}

		.action-links {
			flex-direction: column;
			width: 100%;
		}

		.action-button {
			width: 100%;
			max-width: 300px;
			margin: 0 auto;
		}

		.coffee-button img {
			width: 100%;
			height: auto;
			max-width: 300px;
		}
	}
</style>