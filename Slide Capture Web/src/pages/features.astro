import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const features = [
    {
        title: "Automated Slide Capture",
        description: "Automatically detect and capture slides during Zoom presentations without any manual intervention. Our smart detection system ensures you never miss important content.",
